{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,

    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "experimentalDecorators": true,

    "esModuleInterop": true,
    "outDir": "./dist/",
    "declaration": true,
    "removeComments": false,
    "pretty": false
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*", "tests/**/*", "./.vscode/**/*", "./.env*"]
}
