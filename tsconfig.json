{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,

    "lib": ["ESNext", "ES6"],
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "Node16",

    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "removeComments": false,
    "pretty": false
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["./node_modules/**/*", "./dist/**/*", "tests/**/*", "./.vscode/**/*", "./.env*"]
}
